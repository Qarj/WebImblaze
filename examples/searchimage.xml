<testcases repeat="1">

<testvar varname="RIMATTEST">rimattest.azurewebsites.net</testvar>

<case
    section="Mobile"
    id="100"
    description1="Get RIMATTEST Home page"
    description2="mobile phone pixel width - 320 wide"
    method="selenium"
    command1="$selresp = $driver->set_window_size(960, 320);"
    command2="$selresp = $driver->get('http://${RIMATTEST}');"
    verifytext="get_page_source"
    verifypositive="automated testing examples"
    searchimage="examples\search_images\menu_hamburger.png"
    searchimage1="examples\search_images\content_vertical_mobile.png"
/>

<case
    section="Desktop"
    id="200"
    description1="Get RIMATTEST Home page"
    description2="desktop pixel width - 1260 wide"
    method="selenium"
    command1="$selresp = $driver->set_window_size(960, 1260);"
    command2="$selresp = $driver->get('http://${RIMATTEST}');"
    verifytext="get_page_source"
    verifypositive="automated testing examples"
    searchimage="examples\search_images\menu_desktop.png"
    searchimage1="examples\search_images\content_horizontal_desktop.png"
/>


</testcases>