<case
    section="Locators for Testers Example - National Rail"
    id="100"
    description1="Fill out National Rail search form"
    method="selenium"
    command1='$selresp = $driver->get("http://www.nationalrail.co.uk/");'
    command2="$selresp = helper_keys_to_element_after('From','London Bridge');"
    command3="$selresp = helper_keys_to_element('to','Gatwick Airport');"
    verifytext="get_current_url,get_body_text"
    verifypositive="Buy tickets"
/>

