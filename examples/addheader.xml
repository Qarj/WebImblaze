<testcases repeat="1">

<!--
addheader in this example is used to add some cookies. It will replace any
existing cookies.

In this example, the application doesn't recognise these cookies so it doesn't
affect anything. Example is only so you can see syntax as part of a full example.
-->

<!--
<testvar varname="RIMATTEST">http://localhost:54822</testvar>
 -->
<testvar varname="RIMATTEST">http://rimattest.azurewebsites.net</testvar>

<case
    id="10"
    description1="Get Home page"
    method="get"
    url="${RIMATTEST}"
    verifypositive1="WebInject"
    addheader="Cookie: SoftLoggedInCookie=${SOFT_LOG_COOKIE}; MobileWebsite=1"
/>



</testcases>