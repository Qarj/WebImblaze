<testcases repeat="1">

<case
    section="Locators for Testers Example - StepStone"
    id="100"
    description1="Fill out StepStone search form"
    method="selenium"
    command1='$selresp = $driver->get("https://www.stepstone.de/");'
    command2="$selresp = helper_keys_to_element('Jobtitel, Firmenname','Test Automation');"
    command3="$selresp = helper_keys_to_element('Ort oder 5','Berlin');"
    verifytext="get_current_url,get_body_text"
    verifypositive="Job nach Berufsfeld"
/>

<case
    id="110"
    description1="Click Suchen"
