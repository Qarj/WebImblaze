<testcases repeat="1">

<case
    section="Locators for Testers Example - TFL"
    id="100"
    description1="Fill out TFL search form"
    method="selenium"
    command1='$selresp = $driver->get("https://tfl.gov.uk");'
    command2="$selresp = helper_keys_to_element('From','SE1 2UP');"
    command3="$selresp = helper_keys_to_element('To','SW3 4TZ');"
    command4="$selresp = helper_click('Plan my journey');"
    verifytext="get_current_url,get_body_text"
    verifypositive="Plan a journey"
/>

<case
    id="110"
    description1="Submit search"
    method="selenium"
    command1="$selresp = helper_click('Plan my journey');"
    command2="$selresp = helper_wait_for_text_visible('Journey results', 25);"
    verifytext="get_current_url,get_body_text"
    verifypositive="Tower Hill Underground Station"
    verifypositive20="Found sought text"
/>

<case
    id="120"
    description1="View Details of first route"
    method="selenium"
    command1="$selresp = helper_click('View Details');"
    command2="$selresp = helper_wait_for_text_visible('View text directions', 25);"
    verifytext="get_current_url,get_body_text"
    verifypositive20="Found sought text"
/>

</testcases>