<testcases repeat="1">

<case
    section="helper_wait_visible"
    id="10"
    description1="Info - helper_wait_visible"
    method="cmd"
    command1='echo NOP'
/>

<case
    section="Wait for something that really is visible"
    id="100"
    description1="Get Search Recipes"
    method="selenium"
    command1='$selresp = $driver->get("http://{RAN}/Search/SearchRecipes");'
    command2="$selresp = helper_wait_for_text_visible('Recipe Name');"
    command3="$selresp = helper_wait_visible('Recipe Name');"
    verifytext="get_current_url,get_page_source"
    verifypositive="Recipe Name"
    verifypositive2="Found sought text visible after"
    verifypositive3="Found sought element visible after"
/>

<case
    section="Wait for something that is not visible, and will not be"
    id="200"
    description1="Get Search Recipes"
    method="selenium"
    command1='$selresp = $driver->get("http://{RAN}/Search/SearchRecipes");'
    command2="$selresp = helper_wait_visible('ThisIsNotPresent');"
    verifytext="get_current_url,get_page_source"
    verifypositive="Recipe Name"
    verifypositive2="Did not find sought element visible, timed out after"
    verifynegative2="Found sought element visible after"
/>

<case
    section="helper_wait_not_visible"
    id="1000"
    description1="Info - helper_wait_not_visible"
    method="cmd"
    command1='echo NOP'
/>

<case
    section="Wait for something to become not visible, but it does not"
    id="1100"
    description1="Get Search Recipes"
    method="selenium"
    command1='$selresp = $driver->get("http://{RAN}/Search/SearchRecipes");'
    command2="$selresp = helper_wait_for_text_visible('Recipe Name');"
    command3="$selresp = helper_wait_not_visible('Recipe Name');"
    verifytext="get_current_url,get_page_source"
    verifypositive="Recipe Name"
    verifypositive2="Found sought text visible after"
    verifypositive3="TIMEOUT: Still found element visible, timed out after"
/>

<case
    section="Wait for something to become not visible, but it is not present to start with"
    id="1200"
    description1="Get Search Recipes"
    method="selenium"
    command1='$selresp = $driver->get("http://{RAN}/Search/SearchRecipes");'
    command2="$selresp = helper_wait_not_visible('ThisIsNotPresent');"
    verifytext="get_current_url,get_page_source"
    verifypositive="Recipe Name"
    verifypositive2="SUCCESS: Sought element visible not found after"
/>

</testcases>