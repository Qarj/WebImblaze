    verifypositive2="Element is checked"
/>

<case
    id="310"
    description1="Click INPUT element *before* 'Enable other employers to find me'"
    method="selenium"
    command1="$selresp = helper_mouse_move_to_location('register','id',1,1);"
    command2="$selresp = helper_is_checked('cvdbOptIn','id');"
    command3="$selresp = helper_click_before('Enable other employers to find me');"
    command4="$selresp = helper_get_attribute('cvdbOptIn','id','checked');"
    command5="$selresp = helper_get_attribute('cvdbOptIn','id','value');"
    command6="$selresp = helper_is_checked('cvdbOptIn','id');"
    verifytext="get_current_url,get_body_text"
/>

