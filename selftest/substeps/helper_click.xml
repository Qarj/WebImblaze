<testcases repeat="1">

<case
    section="Click Helper Self Test - Anchors"
    id="100"
    description1="Get Search Recipes"
    method="selenium"
    command='$selresp = $driver->get("http://{RAN}/Search/SearchRecipes");'
    verifytext="get_current_url,get_page_source"
    verifypositive="Recipe Name"
/>

<case
    id="110"
    description1="Click Search"
    description2="Partial match from start of string, 3rd instance"
    method="selenium"
    command1="$selresp = helper_click('Search|||3');"
    command2="$selresp = helper_wait_for_text_visible('MaxPrepTime field is required');"
    verifytext="get_current_url,get_body_text"
    verifypositive1="Focused and clicked tag INPUT WITH\[Search] OK \(text index 0\)"
    verifypositive20="Found sought text"
/>

