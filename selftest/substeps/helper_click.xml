<testcases repeat="1">

<case
    section="Click Helper Self Test - Anchor found at start of text in element"
    id="100"
    description1="Get Totaljobs Jobseeker Account Register Page"
    method="selenium"
    command='$selresp = $driver->get("https://www.totaljobs.com/account/register");'
    verifytext="get_page_source,get_current_url"
    verifypositive="Location"
/>

<case
    id="110"
    description1="Click Upload your CV"
    method="selenium"
    command1="$selresp = helper_click('Upload your CV');"
    command2="$selresp = helper_wait_for_text_visible('from this device','body','tag_name','3');"
    verifytext="get_current_url,get_body_text"
    verifypositive20="Found sought text"
/>

<case
    section="Click Helper Self Test - Second instance of Anchor"
    id="200"
