<testcases repeat="1">

<case
    section="RIMATTEST Search Form"
    id="10"
    description1="Get RIMATTEST Search Form"
    method="selenium"
    command='$selresp = $driver->get("http://{RAN}/Search/SearchForm");'
    command1='$selresp = $driver->get_all_cookies();'
    verifytext="get_page_source,get_current_url"
    verifypositive="Search Recipes"
    verifypositive1="Max Preparation Time"
/>

<case
    id="20"
    description1="Fill out Search Form"
    method="selenium"
    command1="$selresp = helper_clear_and_send_keys('TxtRecipeName','id','Sheperds Pie');" 
    command2="$selresp = helper_clear_and_send_keys('TxtCuisine','id','British');" 
    command3="$selresp = helper_clear_and_send_keys('TxtMaxPrepTime','id','2');" 
    verifytext="get_page_source,get_current_url"
    verifypositive="Cuisine"
/>

<case
    id="30"
    description1="Submit Search"
    method="selenium"
    command1='$selresp = $driver->find_element("input[name=BtnSubmit]","css")->click();'
    verifytext="get_page_source,get_current_url"
    verifypositive="you just submitted a search"
/>

</testcases>