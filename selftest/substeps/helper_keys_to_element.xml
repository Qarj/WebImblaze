<testcases repeat="1">

<case
    section="RIMATTEST Search Form"
    id="10"
    description1="Get RIMATTEST Search Form"
    method="selenium"
    command='$selresp = $driver->get("http://{RAN}/Search/SearchForm");'
    command1='$selresp = $driver->get_all_cookies();'
    verifytext="get_page_source,get_current_url"
    verifypositive="Search Recipes"
    verifypositive1="Max Preparation Time"
/>

<case
    id="20"
    description1="Fill out Search Form"
    method="selenium"
    command1="$selresp = helper_keys_to_element_after('Recipe Name','Shepherds Pie');"
    command2="$selresp = helper_keys_to_element_after('Cuisine','British');"
    command3="$selresp = helper_keys_to_element_after('Max Prep','2');"
    command4="$selresp = helper_wait_for_text_visible('Cuisine', 'body', 'tag_name', 5);"
    verifytext="get_page_source,get_current_url"
    verifypositive="Cuisine"
/>

<case
    id="30"
    description1="Submit Search"
    method="selenium"
    command1='$selresp = $driver->find_element("input[name=BtnSubmit]","css")->click();'
    verifytext="get_page_source,get_current_url"
    verifypositive="you just submitted a search"
/>

<case
    section="Keys to SELECT element"
    id="100"
    description1="Set Highest level of education to Diploma"
    method="selenium"
    command1='$selresp = $driver->get("https://www.totaljobs.com/account/register");'
    command2="$selresp = helper_keys_to_element_after('Highest level of education','538','SELECT');"
    command3="$selresp = helper_get_selection(q|select[id='ddlEducation']|,'css');"
    verifytext="get_page_source,get_current_url"
    verifypositive="\[538\] Diploma"
/>

<case
    section="Keys to checkbox"
    id="200"
    description1="View 'Switch on one-click apply' current state"
    method="selenium"
    command1="$selresp = helper_is_checked('ocaOptIn','id');"
    command2="$selresp = helper_mouse_move_to_location('register','id',1,1);"
    verifypositive="Element is checked"
/>

<case
    id="210"
    description1="Uncheck 'Switch on one-click apply'"
    method="selenium"
    command3="$selresp = helper_keys_to_element_after('Enable other employers to find me','');"
    command4="$selresp = helper_is_checked('ocaOptIn','id');"
    verifypositive="Element is not checked"
/>

<case
    section="Keys to element mathcing placeholder attribute"
    id="300"
    description1="Send Test Automation Architect to Current/most recent job title"
    method="selenium"
    command1="$selresp = helper_keys_to_element('E.g. Regional Manager','Test Automation Architect');"
    command2="$selresp = helper_get_element_value('currentJobTitle','id','value');"
    verifypositive="SELRESP:Test Automation Architect"
/>

</testcases>